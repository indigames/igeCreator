<?xml version="1.0" encoding="UTF-8"?>
<manifest package="#PACKAGE_NAME#"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    #ANDROID_PERMISSIONS#

    #FIREBASE_PERMISSIONS#

    <!-- Android features -->
    #ANDROID_FEATURES#

    <!-- OpenGL ES 3.0 -->
    <uses-feature android:glEsVersion="0x00030000" android:required="true"></uses-feature>

    <!-- Support 18:9 ratios -->
    <meta-data android:name="android.max_aspect" android:value="2.1"></meta-data>

    <!-- Application -->
    <application android:icon="@mipmap/ic_launcher" android:label="@string/app_name" android:roundIcon="@mipmap/ic_launcher_round" android:networkSecurityConfig="@xml/network_security_config">

        #IGE_SDK_METADATA#

        #IGE_ADS_METADATA#

        #IGE_FIREBASE_METADATA#

        #IGE_SOCIAL_METADATA#

        #IGE_NOTIFY_METADATA#

        #IGE_WEBVIEW_METADATA#

        #IGE_CAMERA_METADATA#

        <!-- File Provider -->
        <provider android:name="androidx.core.content.FileProvider" android:authorities="${applicationId}.provider" android:exported="false" android:grantUriPermissions="true">
            <meta-data android:name="android.support.FILE_PROVIDER_PATHS" android:resource="@xml/file_paths"></meta-data>
        </provider>

        <!-- Main Activity -->
        <activity android:name=".MainActivity" 
            android:exported="true"
            android:resizeableActivity="true"
            android:alwaysRetainTaskState="true"
            android:theme="@android:style/Theme.DeviceDefault.NoActionBar.Fullscreen"
            android:configChanges="orientation|uiMode|screenLayout|screenSize|smallestScreenSize|density|fontScale|layoutDirection|keyboard|keyboardHidden|navigation|locale|mcc|mnc|navigation"
            android:screenOrientation="#SCREEN_ORIENTATION#"
            android:launchMode="standard"
            tools:ignore="LockedOrientationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"></action>
                <category android:name="android.intent.category.LAUNCHER"></category>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW"></action>
                <category android:name="android.intent.category.DEFAULT"></category>
                <category android:name="android.intent.category.BROWSABLE"></category>
                <data android:scheme="@string/fb_auto_applink_scheme"></data>
            </intent-filter>
        </activity>
    </application>
</manifest>
